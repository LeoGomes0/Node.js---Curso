// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Produtos {
  id_produto       Int                @id @default(autoincrement())
  nome_produto     String
  descricao        String
  preco_unitario   Decimal
  Entradas_Estoque Entradas_Estoque[]
  Saidas_Estoque   Saidas_Estoque[]
}

model Entradas_Estoque {
  id_entrada   Int      @id @default(autoincrement())
  ProdutoId    Int
  quantidade   Int
  data_entrada DateTime
  Produtos     Produtos @relation(fields: [ProdutoId], references: [id_produto])
}

model Saidas_Estoque {
  id_saida   Int      @id
  ProdutoId  Int
  quantidade Int
  data_saida DateTime
  Produtos   Produtos @relation(fields: [ProdutoId], references: [id_produto])
}
